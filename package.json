{
	"name": "music-placer",
	"version": "1.0.2",
	"description": "Music place helper tool",
	"main": "main.js",
	"author": "Alex Wright",
	"license": "ISC",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder"
	},
	"build": {
		"appId": "com.yourname.musicplacer",
		"productName": "Music Placer",
		"files": [
			"main.js",
			"src/**/*",
			"public/**/*",
			"node_modules/**/*",
			"package.json"
		],
		"extraResources": [
			{
				"from": "node_modules/ffmpeg-static",
				"to": "ffmpeg",
				"filter": ["**/*"]
			},
			{
				"from": "node_modules/@ffprobe-installer/win32-x64",
				"to": "ffprobe",
				"filter": ["**/*"]
			}
		],
		"asar": true,
		"icon": "public/android-chrome-512x512"
	},
	"dependencies": {
		"@ffprobe-installer/ffprobe": "^2.1.2",
		"electron-log": "^5.3.3",
		"ffmpeg-static": "^5.2.0",
		"fluent-ffmpeg": "^2.1.3",
		"get-audio-duration": "^4.0.1",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"electron": "^35.1.5",
		"electron-builder": "^26.0.12"
	}
}
